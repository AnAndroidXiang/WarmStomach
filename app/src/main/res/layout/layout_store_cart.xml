<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBaseBackground"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:id="@+id/store_clear_cart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25">

        <TextView
            android:id="@+id/tv_clear_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:text="@string/clear_shopping_cart"
            android:textColor="@color/register_get_vertify"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:src="@drawable/delete_all"
            android:layout_toStartOf="@id/tv_clear_cart"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_5" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorSecondaryText"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_cart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@integer/integer_1"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorSecondaryText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36">

        <TextView
            android:id="@+id/cart_all_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorFoodPrice"
            android:layout_centerVertical="true" />

        <Button
            android:id="@+id/cart_to_settle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/colorSecondaryText"
            android:background="@color/position_loading_layout_bg"
            android:clickable="false"
            android:gravity="center"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.v7.widget.LinearLayoutCompat>