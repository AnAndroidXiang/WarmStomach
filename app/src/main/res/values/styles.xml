<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:preferenceStyle">@style/MaterialPreferenceStyle</item>
        <item name="android:fontFamily">@font/app_family</item>
    </style>

    <style name="MaterialPreferenceStyle" parent="PreferenceThemeOverlay.v14.Material">
        <!--实现滚动条的自动显示和隐藏-->
        <item name="android:fadeScrollbars">true</item>
        <!--垂直滚动-->
        <item name="android:scrollbars">vertical</item>
        <!--定义滚动条淡出的延迟时间（以毫秒为单位）-->
        <item name="android:scrollbarFadeDuration">100</item>
        <item name="android:background">@color/colorBaseBackground</item>
        <!--主要文字颜色，一般TextView的文字都是这个颜色-->
        <item name="android:textColorPrimary">@color/colorPrimaryText</item>
        <!--辅助的文字颜色，一般比textColorPrimary的颜色弱一点，用于一些弱化的表示-->
        <item name="android:textColorSecondary">@color/colorSecondaryText</item>
    </style>

    <style name="AppTheme.START" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@drawable/app_start_bg</item>
    </style>

    <style name="popup_anim_style">
        <!--进场动画-->
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <!--退场动画-->
        <item name="android:windowExitAnimation">@anim/popup_diss</item>
    </style>

    <style name="cart_anim_style">
        <!--进场动画-->
        <item name="android:windowEnterAnimation">@anim/cart_show</item>
        <!--退场动画-->
        <item name="android:windowExitAnimation">@anim/cart_diss</item>
    </style>
    
    <style name="AppTheme.STORE" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>